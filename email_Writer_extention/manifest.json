{
  "name": "Email Reply  Assistent ",
  "description": " AI-Powered email reply Generator ",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage","activeTab"],
    "host_permissions": [
    "https://localhost:8080/*","*://mail.google.com/*"
  ],

"web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": [ "*://mail.google.com/*" ]
    }],
"content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*" ],
      "css":["content.css"],
      "run_at":"document_end"
    }
  ]
  ,

  
  "action": {
    "default_title": "Email Reply Assitent"
   
  }
}
